<div class="row">
    <div class="col-sm-4 col-md-offset-4" style="position: absolute; top:20%; left:30%;">
        <h1 align="center"><img src="https://image.flaticon.com/icons/svg/748/748137.svg" height="50px">Sign Up</h1>
        {{#if hasErrors}}
            <div class="alert alert-danger">
                {{#each messages}}
                    <p>{{this}}</p>
                {{/each}}
            </div>
        {{/if}}
        <form action="/user/signup" method="POST">
            <div class="form-group">
                <label for="email">E-Mail</label>
                <input type="text" id="email" name="email" class="form-control">
            </div>
            <div class="form-group">
                <label for="password">Password</label>
                <input type="password" id="password" name="password" class="form-control">
            </div>
            <input type="hidden" name="_csrf" value="{{ csrfToken }}">
            <button class="btn btn-outline-dark btn-block" type="submit">Sign Up</button>
        </form>
    </div>
</div>