{{#each products}}
    <div class="row">
        {{#each this}}
            <div class="col-sm-6 col-md-3" id="card">
                <div class="card">
                    <img src="{{ this.image }}" class="card-img-top" alt="...">
                    <div class="card-body">
                        <h5 class="card-title">{{this.title}}</h5>
                        <div class="card-text">Processor: {{this.description.proc}}<br>Rear Camera:{{this.description.rcam}}<br>Front Camera:{{this.description.fcam}}<br>Battery: {{this.description.bat}}<br>Display:{{this.description.disp}}<br>Ram: {{this.description.ram}}<br></div>
                        <div>
                            <div class="price">${{this.price}}</div>
                            <div class="cartbutton">
                                <a href="/add-to-cart/{{this._id}}" class="btn btn-outline-dark" role="button"><b>Add to the cart</b></a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        {{/each}}
    </div>
{{/each}}

