
<div class="row">
    <div class="col-sm-8 col-md-6 col-md-offset-4 col-sm-offset-3" style="position: absolute; left:32%;">
        <h1>Checkout</h1>
        <h4>Your Total: ${{total}}</h4>
        <div class="row">
            <div class="col-sm-8">
                <div id="charge-error" class="alert alert-danger" style="display: none;"></div>
            </div>
        </div>
        <form action="/checkout" method="post" id="checkout-form">
            <div class="row">
                <div class="col-sm-8">
                    <div class="form-group">
                        <label for="name">Name</label>
                        <input type="text" id="name" class="form-control" placeholder="Name" required>
                    </div>
                </div>
                <div class="col-sm-8">
                    <div class="form-group">
                        <label for="adress">Adress</label>
                        <input type="text" id="adress" class="form-control" placeholder="Adress" required>
                    </div>
                </div>   
                <div class="col-sm-8">
                    <div class="form-group">
                        <label for="card-name">Card-Holder Name</label>
                        <input type="text" id="card-name" class="form-control" placeholder="Card-Holder Name" required>
                    </div>
                </div>
                <div class="col-sm-8">
                    <label for="card">Card information</label>
                    <div class="form-row">
                        <div class="col-sm-12">
                            <div class="form-group">
                                <input type="text" id="card-number" class="form-control" placeholder="Card Number" required>
                            </div>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="col-sm-4">
                            <div class="form-group">
                                <input type="text" id="card-expiry-month" class="form-control" placeholder="Expiration month" required>
                            </div>
                        </div>
                        <div class="col-sm-4">
                            <div class="form-group">                                                
                                <input type="text" id="card-expiry-year" class="form-control" placeholder="Expiration year" required>
                            </div>
                        </div>
                        <div class="col-sm-4">
                            <div class="form-group">                                                
                                <input type="text" id="card-cvc" class="form-control" placeholder="CVC" required>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-8">
                    <button type="submit" class="btn btn-success btn-lg btn-block">Pay ${{total}}</button>
                </div>
            </div>
        </form>
    </div>
</div>
